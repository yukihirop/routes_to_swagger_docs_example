<p id="notice"><%= notice %></p>

<h1>Listing Api V1 Posts</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_v1_posts.each do |api_v1_post| %>
      <tr>
        <td><%= api_v1_post.status %></td>
        <td><%= api_v1_post.content %></td>
        <td><%= link_to 'Show', api_v1_post %></td>
        <td><%= link_to 'Edit', edit_api_v1_post_path(api_v1_post) %></td>
        <td><%= link_to 'Destroy', api_v1_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_api_v1_post_path %>
