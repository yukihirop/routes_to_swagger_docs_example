<p id="notice"><%= notice %></p>

<h1>Listing Api V1 Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_v1_tasks.each do |api_v1_task| %>
      <tr>
        <td><%= api_v1_task.status %></td>
        <td><%= api_v1_task.content %></td>
        <td><%= link_to 'Show', api_v1_task %></td>
        <td><%= link_to 'Edit', edit_api_v1_task_path(api_v1_task) %></td>
        <td><%= link_to 'Destroy', api_v1_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_api_v1_task_path %>
